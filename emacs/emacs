;; this should be inserted in your .emacs
;; be careful to replace PATH/TO/ with the path...

(use-package capable
  :load-path "PATH/TO/DIR" ;; for capable.el
  :mode
  ("\\.capable\\'" . capable-mode)
  :config
  (setq capable-command "PATH/TO/EXEC" ;; for capable
        capable-options ""
        )
  )
;; EOF
