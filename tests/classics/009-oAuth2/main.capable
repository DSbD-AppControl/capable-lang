role Service
role Client
role Auth

union logon
    { login  : Unit
    ; cancel : Unit
    }

union quit { quit : Unit }

union pword { pword : String }

union auth { auth : Bool }

protocol oauthSimple
  = Service ==> Client [logon]
    { login(Unit) . Client ==> Auth    [pword] { pword(String)
                  . Auth   ==> Service [auth]  { auth(Bool)
                  . end
      }}

    | cancel(Unit) . Client ==> Auth [quit] { quit(Unit).end }
    }

session auth <oauthSimple as Client> (pwd : String) -> Bool
{
  ?asa
}

