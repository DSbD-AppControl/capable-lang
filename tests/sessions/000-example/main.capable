role Alice
role Bob

type foo = String

union ping { ping : String }
union pong { pong : String }

union pongR { pongR : foo
            ; quit  : String
            }



protocol pingpong = Alice ==> Bob   [ping] { ping(String)
                  . Bob   ==> Alice [pong] { pong(String)
                  . end }}

protocol pingpongR = rec(x)
                   . Alice ==> Bob   [ping] { ping(String)
                   . Bob   ==> Alice [pongR] { pongR(foo) . call(x)
                                             | quit(String) . end
                                             }}

session p <pingpongR as Alice> () -> Unit
{
  ?rhs
}
main (args : [String])
{
  print("My First Program")
; print(toString('\n'))

}
