role Service
role Client
role Auth

type logon
  = union
    { login  : Unit
    ; cancel : Unit
    }

type quit = union { quit : Unit }

type pword = union { pword : String }

type auth = union { auth : Bool }

protocol oauthSimple
  = Service ==> Client [logon]
    { login(Unit)
      .Client ==> Auth    [pword] { pword(String)
      .Auth   ==> Service [auth]  { auth(Bool)
      .end}}
    | cancel(Unit)
      . Client ==> Auth [quit] { quit(Unit).end}
    }

