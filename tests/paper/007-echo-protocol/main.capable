func printLn(msg : String) -> Unit
{
  print(msg);
  print(toString('\n'))
}

role Client
role Server

newtype Msg(String)

union cmd { msg  : Msg
          ; quit : Msg
          }

protocol Echo
  = rec(x)
  . Client ==> Server [cmd]
    { msg(Msg)  . Server ==> Client | Msg(String) . call(x)
    | quit(Msg) . Server ==> Client | Msg(String) . end
    }

session echoClient1 <Echo as Client>(i : String) -> Bool
{
  loop(x)
  {
    send [cmd] Server msg(Msg(i))
    catch
    {
      crash(false)
    }
    recv [Msg] Server
    {
      when Msg (Msg_value)
      {
        call(x)
      }
    } catch
    {
      crash(false)
    }
  }
}


session echoClient <Echo as Client>(i : String) -> Bool
{
  ?rhs
}

-- ### Program Entry Point
main (args : [String])
{
  local val = "Hello World";

  -- Run a session, assigning processes to roles.
  if run echoClient(val) with [Server as "python3 pingping.py" ]
  {
    print("We echoed successfully.")
  } else
  {
    printLn("Oops we crashed!")
  }
}

